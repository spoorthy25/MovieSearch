<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.spoorthy.moviesearch.SearchResultsActivity">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_search_movie"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/search_mve_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_search_movie"
                android:layout_toRightOf="@+id/image_search_movie"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/search_mve_dor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_mve_name"
                android:layout_toEndOf="@+id/image_search_movie"
                android:layout_toRightOf="@+id/image_search_movie"
                />


            <TextView
                android:id="@+id/search_person_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_mve_dor"
                android:layout_toEndOf="@+id/image_search_movie"
                android:layout_toRightOf="@+id/image_search_movie"
                />


            <TextView
                android:id="@+id/search_mve_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/search_mve_dor"
                android:layout_toEndOf="@+id/search_person_sex"
                android:layout_toRightOf="@+id/search_person_sex"
                />

            <TextView
                android:id="@+id/search_person_ssn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_search_movie"
                android:layout_toRightOf="@+id/image_search_movie"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>